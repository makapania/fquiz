# FQuiz environment variables (example)
# Copy to .env.local and fill in values as needed

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# OpenAI (used for Basic/OpenAI providers)
OPENAI_API_KEY=

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# Z.ai
ZAI_API_KEY=
# Optional custom base URL for Z.ai (defaults to https://api.z.ai/api/paas/v4)
ZAI_BASE_URL=

# OpenRouter
OPENROUTER_API_KEY=
# Optional custom base URL (defaults to https://openrouter.ai/api/v1)
OPENROUTER_BASE_URL=
# Optional ranking metadata
OPENROUTER_SITE_URL=
OPENROUTER_SITE_TITLE=

# Google Generative AI (Gemini)
GOOGLE_GENAI_API_KEY=
# Optional custom base URL (defaults to https://generativelanguage.googleapis.com/v1beta)
GOOGLE_GENAI_BASE_URL=

# NextAuth configuration (required for authentication)
NEXTAUTH_URL=http://localhost:3000  # Local: http://localhost:3000, Prod: https://your-domain.vercel.app
NEXTAUTH_SECRET=  # Generate with: openssl rand -base64 32

# NextAuth providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=
EMAIL_SERVER=
EMAIL_FROM=

# Defaults (centralized)
# Server-side default AI provider used by generation routes
DEFAULT_AI_PROVIDER=google
# Client-side default AI provider and model for UI
NEXT_PUBLIC_DEFAULT_AI_PROVIDER=google
NEXT_PUBLIC_DEFAULT_GOOGLE_MODEL=gemini-2.5-flash
